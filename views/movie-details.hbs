<div class="container">
  <div class="row justify-content-around">

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{result.images.items}}" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{result.images.items}}" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{result.image.items}}" alt="Third slide">
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-around">
 
  <div class="card" style="width: 20rem; ">
  {{#if result.image}}
  <img src={{result.image}} class="card-img-top" alt="Photo" style="max-height: auto;">
  {{/if}}
  {{#unless result.image}}
  <img src="/images/404.png" class="card-img-top" alt="Photo" style="max-height: 10rem;">
  {{/unless}}
  <div class="card-body">
    <h5 class="card-title">{{result.title}}</h5>
    <hr>
    <p class="card-text">Description: {{result.plot}}</p>

  </div>
    <a href="/movies" class="page-btn">Back to Movies</a>
  </div>
 <form action="/addMovie/{{result.id}}" method="post">

    <div class="submit_form">
        <button class="like_button" type ="submit"><span><b>Like Me</b></span></button>     
     </div>
     </form>

      <form action="/removeMovie/{{result.id}}" method="post">

    <div class="submit_form">
        <button class="like_button" type ="submit"><span><b>Delete Me</b></span></button>     
     </div>
     </form>

</div>
</div>
  </div>