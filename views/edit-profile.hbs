<h1>Edit Profile</h1>

<div class='row'>
  <div class='col-md-6'>
    <form action='/edit-profile/{{_id}}' method='post' enctype='multipart/form-data'>
      <div class='form-group'>
        <label for='user' class='form-label'>Name</label>
        <input type='text' name='username' class='form-control' id='username' value='{{username}}' />
      </div>
      <div class='form-group'>
        <label for='description' class='form-label'>Description</label>
        <textarea class='form-control' name='description' id='description' cols='30' rows='10'>
          {{description}}
        </textarea>
      </div>
      <div class='form-group'>
        <label>Image:
          <input type='file' name='poster' class='form-control-file' />
        </label>
      </div>

      <input type='text' value='{{imageUrl}}' name='currentImage' hidden />
      <button type='submit' class='btn btn-primary'>Submit</button>

    </form>

    <form action="/edit-profile/{{_id}}/delete" method="post">
      <button type='submit' class='btn btn-danger'>Delete</button>
    </form>
  </div>
</div>