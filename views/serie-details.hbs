<div class="container">
  <div class="row justify-content-around">
 
  <div class="card" style="width: 30rem; ">
  {{#if result.image}}
  <img src={{result.image}} class="card-img-top" alt="Photo" style="max-height: auto;">
  {{/if}}
  {{#unless result.image}}
  <img src="/images/404.png" class="card-img-top" alt="Photo" style="max-height: 10rem;">
  {{/unless}}
  <div class="card-body">
    <h5 class="card-title">{{result.title}}</h5>
    <hr>
    <p class="card-text">Description: {{result.plot}}</p>
    <hr>
    <p class="card-text">Cast Stars: {{result.stars}}</p>
    <hr>
    <a href="/trailer/{{result.id}}" class="page-btn">Watch Trailer</a>
  </div>
    <a href="/profile" class="page-btn">Back to Profile</a>
  </div>
