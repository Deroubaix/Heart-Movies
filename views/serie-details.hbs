  <div class="container container-margin">
  <div class="row align-items-center">
    <div class="col-md-6">
      <div class="arrange_image">
        {{#if result.image}}
        <img class="image_details img-fluid" src={{result.image}} width="500px">
        {{/if}}
        {{#unless result.image}}
        <img class="image_details" src="/images/404-img.jpg" width="500px">
        {{/unless}}
      </div>
    </div>
    <div class="col-md-6">
      <div class="main_details">
        <h2 class="movie_name_details">{{result.title}}</h2>
        {{#if result.directors}}
        <div class="director"><b class="details_bold">Director: </b>{{result.directors}}</div>
        {{else}}
        <div class="director"><b class="details_bold">Director: </b>No data found</div>
        {{/if}}
        <div class="cast"><b class="details_bold">Cast Stars: </b>{{result.stars}}</div>
        <div class="director"><b class="details_bold">Genre: </b>{{result.genres}}</div>
        <div class="rating"><b class="details_bold">Rating: </b> {{result.imDbRating}}</div>
        {{#if result.year}}
        <div class="release_date"><b class="details_bold">Year: </b>{{result.year}}</div>
        {{/if}}
        {{#unless result.year}}
        <div class="release_date"><b class="details_bold">Year: </b> <br>No Date Found</div>
        {{/unless}}
        <div class="description"><b class='details_bold'>Plot: </b> {{result.plot}}</div>
        <a class ="trailer" target="_blank" href="/trailer/{{result.id}}"><b class="trailer_bold">Watch Trailer</b></a>
        {{!-- {{#each userfavorite}}
        {{#ifEquals user._id this.id}} --}}
  
                {{#if isFavourite}}
          
          <form action="/removeMovie/{{result.id}}" method="post" class="form">
          <div class="submit_form">
         <button class="like_button" type ="submit"><svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-suit-heart-fill text-danger" viewBox="0 0 16 16">
  <path d="M4 1c2.21 0 4 1.755 4 3.92C8 2.755 9.79 1 12 1s4 1.755 4 3.92c0 3.263-3.234 4.414-7.608 9.608a.513.513 0 0 1-.784 0C3.234 9.334 0 8.183 0 4.92 0 2.755 1.79 1 4 1z"/></svg></button>  
  <span><b>Unlike</b></span>   
      </div>
       
          {{else}}
          

      <form action="/addMovie/{{result.id}}" method="post" class="form">
          <div class="submit_form">
            
            <button class="like_button" type ="submit"><svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-suit-heart text-danger" viewBox="0 0 16 16">
  <path d="m8 6.236-.894-1.789c-.222-.443-.607-1.08-1.152-1.595C5.418 2.345 4.776 2 4 2 2.324 2 1 3.326 1 4.92c0 1.211.554 2.066 1.868 3.37.337.334.721.695 1.146 1.093C5.122 10.423 6.5 11.717 8 13.447c1.5-1.73 2.878-3.024 3.986-4.064.425-.398.81-.76 1.146-1.093C14.446 6.986 15 6.131 15 4.92 15 3.326 13.676 2 12 2c-.777 0-1.418.345-1.954.852-.545.515-.93 1.152-1.152 1.595L8 6.236zm.392 8.292a.513.513 0 0 1-.784 0c-1.601-1.902-3.05-3.262-4.243-4.381C1.3 8.208 0 6.989 0 4.92 0 2.755 1.79 1 4 1c1.6 0 2.719 1.05 3.404 2.008.26.365.458.716.596.992a7.55 7.55 0 0 1 .596-.992C9.281 2.049 10.4 1 12 1c2.21 0 4 1.755 4 3.92 0 2.069-1.3 3.288-3.365 5.227-1.193 1.12-2.642 2.48-4.243 4.38z"/>
</svg></button>
            <span><b>Like</b></span>
          </div>
      {{/if}}
      {{!-- {{/ifEquals}}
          {{/each}} --}}
        </form>
      </div>
    </div>
  </div>
</div>








<hr>



<div id="people-likes">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <h1 class="text-center">People who liked this</h1>
                <hr>
            </div>
            {{#each checkMovie}}
            {{#each userfavorite}}
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card text-center">
                    <img src="{{this.imageUrl}}" class="card-img-top mx-auto d-block" alt="Photo" style="height: auto">
                    <div class="card-body">
                        <h5 class="card-title">{{this.username}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p>{{this.id}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/each}}
        </div>
    </div>
</div>